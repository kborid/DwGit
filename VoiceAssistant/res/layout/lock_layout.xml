<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lock_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layerType="hardware"
    android:visibility="invisible" >

    <LinearLayout
        android:id="@+id/lock_inside_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="13dp" >

        <ViewStub
            android:id="@+id/lock_pattern_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/lock_pattern_password_layout" />
        <ViewStub
            android:id="@+id/lock_easy_passward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/lock_easy_passward_layout" />
        <ViewStub
            android:id="@+id/lock_complex_passward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/lock_complex_password_layout" />
    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.sara.widget.BubbleAttachmentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/v_image"
        android:layout_width="@dimen/bubble_attachment_imageview_width"
        android:layout_height="@dimen/bubble_attachment_imageview_height"
        android:layout_gravity="center"
        android:scaleType="center"
        />
    <ImageView
        android:layout_width="@dimen/bubble_attachment_image_width"
        android:layout_height="@dimen/bubble_attachment_image_height"
        android:background="@drawable/accessory_photo"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>

</com.smartisanos.sara.widget.BubbleAttachmentView>
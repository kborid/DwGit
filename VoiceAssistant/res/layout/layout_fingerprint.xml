<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@smartisanos:drawable/sub_item_back_ground_single"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="117dp"
        android:id="@+id/image"
        android:layout_centerHorizontal="true"
        android:background="@drawable/select_contact_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#9a000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-12dp"
        android:layout_below="@id/image"
        android:textSize="19sp"
        android:id="@+id/text_finger_unlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flash_im_finger_unlocked_tip" />
</RelativeLayout>
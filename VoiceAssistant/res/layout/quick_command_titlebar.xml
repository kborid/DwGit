<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smartisanos="http://schemas.android.com/apk/res/smartisanos"
    android:id="@+id/quick_command"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_background" >

    <smartisanos.widget.Title
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        smartisanos:title="@string/quick_command_title" />

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar"
        android:background="@drawable/bubble_detail_background" />

    <ImageView
        android:id="@+id/title_bar_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/titlebar"
        android:background="@drawable/title_bar_shadow" />

</RelativeLayout>
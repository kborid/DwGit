<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iv_bubble_recycle"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/iv_bubble_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/btn_delete"
        android:textColor="#FFFFFFFF"
        android:textSize="13.5sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/bubble_btn_bg"/>

    <View
        android:layout_width="4px"
        android:layout_height="match_parent"
        android:layout_marginTop="-1dp"
        android:background="@drawable/divider_line_vertical" />

    <TextView
        android:id="@+id/iv_bubble_restore"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/btn_restore"
        android:textColor="#FFFFFFFF"
        android:textSize="13.5sp"
        android:layout_marginLeft="-1dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/bubble_btn_bg"/>

</LinearLayout>
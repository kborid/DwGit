<?xml version="1.0"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"  >
    <style name="leftIn">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="WindowNoTitle" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WindowBackground" parent="WindowNoTitle">
        <item name="android:windowBackground">@smartisanos:drawable/win_background</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullBackground">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="test">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SettingItemTitleStyle">
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowColor">#2dffffff</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:maxWidth">307dip</item>
        <item name="android:textColor">@color/setting_item_primary_title_color</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/settings_item_title_left_margin</item>
        <item name="android:layout_marginRight">@dimen/common_horizontal_padding</item>
        <item name="android:layout_marginTop">@dimen/setting_item_margintop</item>
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="SettingItemTipsStyle">
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowColor">#2dffffff</item>
        <item name="android:layout_marginTop">@dimen/settings_item_tips_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_item_tips_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/settings_item_title_left_margin</item>
        <item name="android:paddingRight">@dimen/settings_item_title_left_margin</item>
        <item name="android:textColor">@color/setting_item_tips_color</item>
        <item name="android:textSize">@dimen/settings_item_tips_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="ListViewGeneralStyle">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingItemGeneralStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingSubItemSingleStyle" parent="SettingItemGeneralStyle">
        <item name="android:background">@drawable/selector_setting_sub_item_bg_single</item>
    </style>
    <style name="SettingSubItemTopStyle" parent="SettingItemGeneralStyle">
        <item name="android:background">@drawable/selector_setting_sub_item_bg_top</item>
    </style>
        <style name="SettingSubItemBottomStyle" parent="SettingItemGeneralStyle">
        <item name="android:background">@drawable/selector_setting_sub_item_bg_bottom</item>
    </style>

    <style name="ButtonShadowStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleButtonStyle" parent="ButtonShadowStyle">
        <item name="android:textSize">@dimen/button_primary_textsize</item>
        <item name="android:textColor">@color/top_button_text_color_grey</item>
    </style>

    <style name="NorShadowColorTitleButtonStyle" parent="@style/TitleButtonStyle" />

    <style name="BlueShadowColorTitleButtonStyle" parent="@style/TitleButtonStyle">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="SettingItemTipsStyleNoBottomGap">
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowColor">#2dffffff</item>
        <item name="android:layout_marginTop">@dimen/settings_item_tips_margin_top</item>
        <item name="android:paddingLeft">@dimen/settings_item_title_left_margin</item>
        <item name="android:paddingRight">@dimen/settings_item_title_left_margin</item>
        <item name="android:textColor">@color/setting_item_tips_color</item>
        <item name="android:textSize">@dimen/settings_item_tips_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SettingsActivityStyle" parent="WindowNoTitle">
        <item name="android:windowBackground">@drawable/setting_background</item>
    </style>

    <style name="popup_window">
        <item name="android:windowEnterAnimation">@anim/popup_window_anim</item>
    </style>

    <!--lock UI start -->
    <style name="lockEasyPasswordDotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">7.5dp</item>
        <item name="android:paddingRight">7.5dp</item>
        <item name="android:src">@drawable/lock_easy_password_dot</item>
    </style>
    <!--lock UI end -->

    <style  name="myapp_edit_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13.5sp</item>
    </style>

    <style name="app_list_size_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:clickable">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>

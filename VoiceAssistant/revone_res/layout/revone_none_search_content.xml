<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="@dimen/flash_im_voice_button_size"
        android:layout_height="@dimen/flash_im_voice_button_size"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:background="@drawable/revone_btn_add_bg"
        android:src="@drawable/revone_add" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add"
        android:layout_marginTop="@dimen/global_none_search_text_margin_top"
        android:layout_centerHorizontal="true"
        android:text="@string/bubble_add_search_tip"
        android:textColor="@color/voice_search_tip_color"
        android:textSize="@dimen/global_bubble_title_size" />
</RelativeLayout>
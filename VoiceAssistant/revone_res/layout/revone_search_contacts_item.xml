<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.sara.bubble.revone.widget.ImContactLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/flash_im_search_result_item_height"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@drawable/revone_contact_result_bg"
    android:gravity="center_vertical">

    <com.smartisanos.sara.bubble.revone.widget.AvatarImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/flash_im_search_result_avatar_size"
        android:layout_height="@dimen/flash_im_search_result_avatar_size"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@id/avatar"
        android:textColor="@color/black"
        android:textSize="15sp" />
</com.smartisanos.sara.bubble.revone.widget.ImContactLayout>

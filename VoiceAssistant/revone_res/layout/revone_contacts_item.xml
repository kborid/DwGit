<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.sara.bubble.revone.widget.ImContactLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="@dimen/flash_im_contact_item_padding"
    android:paddingRight="@dimen/flash_im_contact_item_padding">

    <LinearLayout
        android:layout_width="@dimen/flash_im_contact_item_width"
        android:layout_height="wrap_content"
        android:background="@drawable/revone_contacts_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.smartisanos.sara.bubble.revone.widget.AvatarImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/flash_im_avatar_size"
            android:layout_height="@dimen/flash_im_avatar_size"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="9dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar"
            android:maxWidth="@dimen/flash_im_title_max_width"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</com.smartisanos.sara.bubble.revone.widget.ImContactLayout>

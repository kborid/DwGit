<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.ideapills.view.BubbleAttachmentView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/v_image"
        android:layout_width="@dimen/bubble_attachment_image_width"
        android:layout_height="@dimen/bubble_attachment_icon_size"
        android:scaleType="center"
        android:layout_gravity="center" />

    <ProgressBar
        android:id="@+id/down_progress"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/attachment_loading_progess"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/down_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/attachment_down"
        android:visibility="gone" />
</com.smartisanos.ideapills.view.BubbleAttachmentView>
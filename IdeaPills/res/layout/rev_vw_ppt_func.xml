<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:paddingLeft="3dp"
    android:layout_marginTop="@dimen/status_bar_height"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ppt_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="79dp"
        android:background="@drawable/ppt_cancel"
        android:text="@string/ppt_close"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="14dp"
        android:drawablePadding="8dp"
        android:paddingBottom="1dp"
        android:drawableLeft="@drawable/ppt_btn_cancel"
        android:textColor="@android:color/white"
        android:textSize="13.5sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ppt_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ppt_confirm"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center"
        android:layout_marginBottom="140dp"
        android:drawableLeft="@drawable/ppt_btn_ppt"
        android:drawablePadding="10dp"
        android:text="@string/ppt_generate"
        android:paddingBottom="1dp"
        android:textColor="@android:color/white"
        android:textSize="13.5sp"
        android:textStyle="bold" />
</RelativeLayout>
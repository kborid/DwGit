<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.ideapills.view.BubbleFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubble_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.smartisanos.ideapills.view.BubbleOptLayout
        android:id="@+id/bubble_opt_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/status_bar_height"
        android:clipChildren="false"
        >
        <com.smartisanos.ideapills.view.PullViewGroup
            android:id="@+id/view_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bubble_item_base_margin_top"
            android:layout_marginBottom="@dimen/bubble_head_base_margin_bottom"
            android:layout_gravity="right"
            android:background="@drawable/popup_setting_bg"
            >
            <include layout="@layout/bubble_head_expand_detail" />
            <include layout="@layout/bubble_head_expand"/>
        </com.smartisanos.ideapills.view.PullViewGroup>

        <com.smartisanos.ideapills.view.BubbleListView
            android:id="@+id/bubblelistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="#00000000"
            android:visibility="gone"
            android:layout_gravity="right"
            android:clipChildren="false"
            />
    </com.smartisanos.ideapills.view.BubbleOptLayout>
</com.smartisanos.ideapills.view.BubbleFrameLayout>

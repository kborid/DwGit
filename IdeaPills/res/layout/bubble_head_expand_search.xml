<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_headexpand_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="22dp"
    android:visibility="gone">

    <com.smartisanos.ideapills.view.BubbleSearchEditText
        android:id="@+id/et_search"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:hint="@string/search_hint"
        android:layout_weight="1"
        android:drawableLeft="@drawable/bubble_search"
        android:drawablePadding="4dp"
        android:singleLine="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="@dimen/bubble_item_text_size"
        android:background="@drawable/text_box"/>

    <com.smartisanos.ideapills.view.BubbleTextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="@string/bubble_cancel"
        android:textColor="#ffffffff"
        android:textSize="@dimen/bubble_item_text_size"
        android:textStyle="bold" />

</LinearLayout>